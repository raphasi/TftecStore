@model TFTEC.Web.EcommerceAdmin.Models.Produto

@{
    ViewData["Title"] = "Edit";
}
<h3>Editar Produto</h3>
<hr />
<form asp-action="Edit" role="form">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <input type="hidden" asp-for="ProdutoId" />
    <div class="form-group">
        <label asp-for="NomeProduto" class="control-label"></label>
        <input asp-for="NomeProduto" class="form-control" />
        <span asp-validation-for="NomeProduto" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DescricaoCurta" class="control-label"></label>
        <textarea asp-for="DescricaoCurta" class="form-control"></textarea>
        <span asp-validation-for="DescricaoCurta" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="DescricaoDetalhada" class="control-label"></label>
        <textarea asp-for="DescricaoDetalhada" class="form-control"></textarea>
        <span asp-validation-for="DescricaoDetalhada" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Preco" class="control-label"></label>
        <input asp-for="Preco" class="form-control" />
        <span asp-validation-for="Preco" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="form-group col-md-6">
            <label asp-for="ImageUrl" class="control-label"></label>
            <input asp-for="ImageUrl" class="form-control" />
            <span asp-validation-for="ImageUrl" class="text-danger"></span>
        </div>
        <div class="form-group col-md-6">
            <img style="max-width:50%" src="@Model.ImageUrl" />
        </div>
     </div>

    <div class="form-group">
        <label asp-for="ImageThumbnailUrl" class="control-label"></label>
        <input asp-for="ImageThumbnailUrl" class="form-control" />
        <span asp-validation-for="ImageThumbnailUrl" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="form-group col-sm-4">
            <label class="control-label">Tamanho</label>
            <br />
            <label class="form-check-label" style="padding-left: 20px">
                <select class="form-control" asp-for="Tamanho" asp-items="Html.GetEnumSelectList<TamanhoProdutoModel>()">
                </select>
            </label>
        </div>
        <div class="form-group col-sm-4">
            <label class="control-label">Marcar como em Estoque?</label>
            <br />
            <label class="form-check-label" style="padding-left: 20px">
                <input class="form-check-input" asp-for="EmEstoque" /> @Html.DisplayNameFor(model => model.EmEstoque)
            </label>
        </div>
        <div class="form-group col-sm-4">
            <label asp-for="CategoriaId" class="control-label"></label>
            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
            <span asp-validation-for="CategoriaId" class="text-danger"></span>
        </div>
    </div>

    <hr />
    <div class="form-group">
        <input type="submit" value="Salvar" class="btn btn-primary" />
        <a asp-action="Index" class="btn btn-outline-info">Retornar</a>
    </div>
</form>
